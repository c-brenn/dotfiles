typeset -gU cdpath fpath mailpath path

export PAGER='less'
export ERL_AFLAGS="-kernel shell_history enabled"

if [[ -z "$LANG" ]]; then
  export LANG='en_GB.UTF-8'
fi

if [[ "$OSTYPE" == darwin* ]]; then
  export BROWSER='open'
fi

cdpath=(
  $cdpath
  $HOME/dotfiles
  /Users/conor/Documents/github/
)

path=(
  $path
  $HOME/.rvm/bin
  $HOME/.local/bin
  $HOME/.cargo/bin
  $HOME/.nvm/versions/node/v8.10.0/bin
)
