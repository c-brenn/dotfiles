[alias]
  undo-commit = reset --soft HEAD^
  unstage = reset HEAD --

[commit]
  gpgsign = true

[core]
  editor = nvim
  excludesfile = ~/.git/config/ignore

[include]
  path = ~/.config/git/gpg-config

[merge]
  tool = fugitive

[mergetool]
  keepBackup = false

[mergetool "fugitive"]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[pull]
  default = current

[push]
  default = current

[rebase]
  autosquash = true

[status]
  showUntrackedFiles = all

