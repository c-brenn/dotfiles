[alias]
  undo-commit = reset --soft HEAD^
  unstage = reset HEAD --
  br = branch
  co = checkout
  cf = commit --amend --reuse-message=HEAD
  mg = merge
  mt = mergetool
  pl = pull
  ps = push
  rb = rebase

[branch]
  autoSetupMerge = simple

[core]
  excludesfile = ~/.config/git/ignore
  editor = nvim

[merge]
  tool = fugitive

[mergetool]
  keepBackup = false

[mergetool "fugitive"]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[pull]
  default = current
	ff = only

[push]
  default = simple
  autosetupremote = true

[rebase]
  autosquash = true

[status]
  showUntrackedFiles = all

