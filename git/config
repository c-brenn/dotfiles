[alias]
  undo-commit = reset --soft HEAD^
  unstage = reset HEAD --
  br = branch
  co = checkout
  cf = commit --amend --reuse-message=HEAD
  mg = merge
  mt = mergetool
  pl = pull
  ps = push
  rb = rebase

[branch]
  autosetupmerge = always

[commit]
  gpgsign = true

[core]
  excludesfile = ~/.config/git/ignore
  editor = nvim

[merge]
  tool = fugitive

[mergetool]
  keepBackup = false

[mergetool "fugitive"]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[pull]
  default = current

[push]
  default = current

[rebase]
  autosquash = true

[status]
  showUntrackedFiles = all

